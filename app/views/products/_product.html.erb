<div id="<%= dom_id product %>" class="card">
  <p>
    <div class="card-header">
      <% if product.image.attached? %>
          <%= image_tag(product.image, class:'img-fluid') %>
      <% end %>
    </div>
  </p>
  <div class="card-body">
    <p>
      <strong><%= product.name %></strong>
    </p>
    <p>
    <strong>Description:</strong>
    <%= product.description %>
    </p>
    <p>
    <strong>Price:</strong>
    <%= product.price %>
    </p>
    <p>
    <strong>Veg:</strong>
    <%= product.veg %>
    </p>
    <p>
    <strong>Available:</strong>
    <%= product.available %>
    </p>
    <p>
    <strong>Featured:</strong>
    <%= product.featured %>
    </p>
  </div>
</div>
