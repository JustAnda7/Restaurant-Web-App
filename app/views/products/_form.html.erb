<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

  <div>
    <%= form.label :veg, style: "display: block" %>
    <%= form.check_box :veg %>
  </div>

  <div>
    <%= form.label :available, style: "display: block" %>
    <%= form.check_box :available %>
  </div>

  <div>
    <%= form.label :featured, style: "display: block" %>
    <%= form.check_box :featured %>
  </div>

  <div class="field">
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :heading), class:"form-select" %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image, class:"form-control" %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
